<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".presentation.fragment.FragmentAddress">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayoutAddressFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarAddressFragment"
                    style="@android:style/Widget.Toolbar.Button.Navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:navigationIcon="@drawable/ic_baseline_keyboard_backspace_24" />

            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id="@+id/textView2AddressFragment"
                style="@style/CustomText.Bold.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayoutAddressFragment" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAddressFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_adapter_address"
                app:layout_constraintBottom_toTopOf="@+id/buttonAddressFragmentAddAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2AddressFragment" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddressFragmentAddAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:elevation="@dimen/_12sdp"
                android:text="@string/add_new_address"
                android:background="@drawable/bg_address_screen"
                app:layout_constraintBottom_toTopOf="@+id/buttonAddressFragmentContinue"
                app:layout_constraintEnd_toEndOf="@+id/recyclerViewAddressFragment"
                app:layout_constraintStart_toStartOf="@+id/recyclerViewAddressFragment" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddressFragmentContinue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_login_button"
                android:text="@string/continue_with_payment"
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/recyclerViewAddressFragment"
                app:layout_constraintStart_toStartOf="@+id/recyclerViewAddressFragment" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>