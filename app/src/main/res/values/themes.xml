<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyStorePhi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/blue_500</item>
    </style>

    <style name="Theme.MyStorePhi" parent="Base.Theme.MyStorePhi" />

    <style name="CustomText.Bold.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black_88</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="CustomText.Bold.SubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black_88</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>

    <style name="CustomText.Bold.TextField" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="CustomText.Bold.Title_Card" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black_88</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="CustomText.Bold.SubTitle_Card" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black_88</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="CustomButton.Login" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:height">@dimen/_30sdp</item>
        <item name="elevation">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="background">@drawable/bg_login_button</item>
    </style>

    <style name="CustomButton.SignUp" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="elevation">@dimen/_8sdp</item>
        <item name="background">@android:color/transparent</item>
    </style>


</resources>